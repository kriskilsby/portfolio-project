<body class="<%= page %>">
<!-- <body> -->
    <header>    
        <!-- Hero Section -->
        <div class="bg-hero-img position-relative vh-100 w-100 overflow-hidden m-0 p-0">

            <!-- Responsive hero image -->
            <picture>
                <source 
                srcset="
                    /images/responsive/cromer-hero-400.webp 400w,
                    /images/responsive/cromer-hero-800.webp 800w,
                    /images/responsive/cromer-hero-1200.webp 1200w,
                    /images/responsive/cromer-hero-1600.webp 1600w,
                    /images/responsive/cromer-hero-2400.webp 2400w
                "
                sizes="100vw"
                type="image/webp">
                <source 
                srcset="
                    /images/responsive/cromer-hero-400.jpg 400w,
                    /images/responsive/cromer-hero-800.jpg 800w,
                    /images/responsive/cromer-hero-1200.jpg 1200w,
                    /images/responsive/cromer-hero-1600.jpg 1600w,
                    /images/responsive/cromer-hero-2400.jpg 2400w
                "
                sizes="100vw"
                type="image/jpeg">
                <img 
                    src="/images/responsive/cromer-hero-1600.jpg" 
                    alt="View of Cromer, Norfolk, UK" 
                    class="w-100 h-100 object-fit-cover d-block"
                    style="display:block;">
            </picture>

            <!-- Overlay content (navbar + text) -->
            <div class="position-absolute top-0 start-0 w-100 h-100 d-flex flex-column justify-content-between text-white">

                <!-- Navbar -->
                <%- include ('components/navbar') %>

                <!-- Centered hero text -->
                <div class="d-flex flex-column justify-content-center align-items-center flex-grow-1 text-center">
                <h1 class="hero-d1">Welcome to my portfolio</h1>
                <h2 class="hero-d2">My journey into</h2>
                <h2 class="hero-d3">Computer Science</h2>
                </div>

                <!-- Photo credit -->
                <div class="p-3 text-start">
                <p class="hero-subtext mb-0">Photo of Cromer, Norfolk, UK</p>
                </div>
            </div>

        </div>

    </header> 

    <!-- Intro section under hero -->
    <section class="about-intro text-center py-5">
        <div class="container-fluid">
            <h2 class="about-title">Engaging & Personal</h2>
            <p class="about-text">
                I love turning tricky data problems into tools that feel simple, intuitive, and engaging. Want to know more about me? 
                The cards below share my background, job experiences, and my MSc Computing Science journey.
            </p>
        </div>
    </section>

    <!-- Card section with carousels -->
