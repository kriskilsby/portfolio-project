        <div class="row">
            <!-- First card -->
            <div class="col-12 col-md-6 mb-4">
                <div class="card border-0 shadow-sm">
                    <div id="kkprofile" class="carousel carousel-dark slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <% 
                            const slides = [
                            { file: 'kk-photo-1', alt: 'Slide 1' },
                            { file: 'kk-photo-2', alt: 'Slide 2' },
                            { file: 'kk-photo-3', alt: 'Slide 3' }
                            ]; 
                            slides.forEach((slide, index) => { 
                            %>
                                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                    <picture>
                                    <source 
                                        srcset="
                                        /images/responsive/<%= slide.file %>-400.webp 400w,
                                        /images/responsive/<%= slide.file %>-800.webp 800w,
                                        /images/responsive/<%= slide.file %>-1200.webp 1200w,
                                        /images/responsive/<%= slide.file %>-1600.webp 1600w,
                                        /images/responsive/<%= slide.file %>-2400.webp 2400w
                                        "
                                        sizes="(max-width: 576px) 100vw, 
                                                (max-width: 768px) 80vw,
                                                (max-width: 1200px) 45vw, 
                                                30vw"
                                        type="image/webp"
                                    >
                                    <source 
