            <div class="col-12 col-md-6 mb-4">
                <div class="card border-0 shadow-sm">
                    <div id="kkexample1" class="carousel carousel-dark slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <% 
                        const slides = [
                        { file: 'kk-photo-1', alt: 'Slide 1' },
                        { file: 'kk-photo-2', alt: 'Slide 2' },
                        { file: 'kk-photo-3', alt: 'Slide 3' }
                        ]; 
                        slides.forEach((slide, index) => { 
                        %>
                        <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                            <picture>
                            <source 
                                srcset="
                                /images/responsive/<%= slide.file %>-400.webp 400w,
                                /images/responsive/<%= slide.file %>-800.webp 800w,
                                /images/responsive/<%= slide.file %>-1200.webp 1200w,
                                /images/responsive/<%= slide.file %>-1600.webp 1600w
                                "
                                sizes="(max-width: 576px) 100vw, 
                                        (max-width: 768px) 50vw,
                                        (max-width: 1200px) 40vw, 
                                        30vw"
                                type="image/webp"
                            >
                            <source 
                                srcset="
                                /images/responsive/<%= slide.file %>-400.jpg 400w,
                                /images/responsive/<%= slide.file %>-800.jpg 800w,
                                /images/responsive/<%= slide.file %>-1200.jpg 1200w,
                                /images/responsive/<%= slide.file %>-1600.jpg 1600w
                                "
                                 sizes="(max-width: 576px) 100vw, 
                                        (max-width: 768px) 50vw,
                                        (max-width: 1200px) 40vw, 
                                        30vw"
                                type="image/jpeg"
                            >
                            <img 
                                src="/images/responsive/<%= slide.file %>-800.jpg" 
                                class="d-block w-100" 
                                alt="<%= slide.alt %>" 
                                loading="lazy"
                            >
                            </picture>
                        </div>
                        <% }) %>
                    </div>

                    <button class="carousel-control-prev" type="button" data-bs-target="#kkexample1" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#kkexample1" data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </button>
                    </div>

                    <div class="card-body text-center">
                    <h5 class="card-title">Kris Kilsby - My Profile</h5>
                    <p class="card-text">
                        Learn a little about who I am, where I am from, what I enjoy doing, and what experiences I have gained.
                    </p>
                    </div>
                </div>
